<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BoutiqueActivity">


    <!--<TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="95dp" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="61dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="189dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="111dp"
                    android:layout_marginEnd="111dp"
                    android:foregroundGravity="center_vertical|center|center_horizontal"
                    android:text="Nom du magasin"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_currencies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="254dp"
                android:text="Opening Hours" />

            <ListView
                android:id="@+id/lv_days"
                android:layout_width="370dp"
                android:layout_height="414dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp">

            </ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/priceDecimalInput"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:enabled="false"
                    android:foregroundGravity="center_vertical|center|center_horizontal"
                    android:inputType="numberDecimal" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:enabled="false"
                    android:text="Pay" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonPublications"
                    android:layout_width="143dp"
                    android:layout_height="49dp"
                    android:layout_marginRight="20dp"
                    android:text="Publications" />

                <Button
                    android:id="@+id/buttonProduits"
                    android:layout_width="143dp"
                    android:layout_height="49dp"
                    android:layout_marginLeft="20dp"
                    android:text="Products" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>